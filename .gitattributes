# Auto-detect text files and normalize to LF in repo
* text=auto

# Always commit docs/CNAME with LF endings (GitHub Pages requirement)
docs/CNAME text eol=lf

# Markdown, YAML, JSON, HTML â†’ LF
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.json   text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.js     text eol=lf
*.jinja  text eol=lf
*.jinja2 text eol=lf

# Windows-specific files can keep CRLF if needed
*.bat    text eol=crlf
*.cmd    text eol=crlf
*.ps1    text eol=crlf

# Binary files (never touched)
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.pdf    binary
*.xlsx   binary
